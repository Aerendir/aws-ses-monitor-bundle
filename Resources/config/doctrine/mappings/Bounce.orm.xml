<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="SerendipityHQ\Bundle\AwsSesMonitorBundle\Model\Bounce" table="aws_ses_monitor_bounces">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>
        <many-to-one
                field="mail"
                target-entity="Mail"
                inversed-by="bounces">

            <join-column name="mail" referenced-column-name="id" />
        </many-to-one>
        <field name="email" type="string" column="email" />
        <field name="lastTimeBounce" type="datetime" column="last_time_bounce" />
        <field name="bounceCount" type="integer" column="bounce_count">
            <options>
                <option name="default">0</option>
            </options>
        </field>
        <field name="type" type="string" column="type" />
        <field name="subType" type="string" column="sub_type" />
    </entity>
</doctrine-mapping>
